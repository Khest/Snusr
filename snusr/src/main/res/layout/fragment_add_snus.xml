<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="no.hbv.gruppe1.snusr.snusr.AddSnus">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:id="@+id/addSnus_imgview"
        android:layout_gravity="left|top" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_name"
        android:layout_gravity="left|center_vertical"
        android:hint="Name"
        android:layout_below="@+id/addSnus_imgview"
        android:layout_alignParentStart="true"
        android:textColor="#881e5d" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_manu"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/etxt_name"
        android:layout_alignParentStart="true"
        android:hint="Manufacturing"
        android:textColor="#881e5d" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_taste2"
        android:entries="@array/spinnerItemsStr"
        android:layout_below="@+id/spin_taste1"
        android:layout_alignStart="@+id/spin_taste1"
        android:textColor="#881e5d"/>

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_taste3"
        android:entries="@array/spinnerItemsStr"
        android:layout_below="@+id/spin_taste2"
        android:layout_alignStart="@+id/spin_taste2"
        android:textColor="#881e5d"/>

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_taste1"
        android:entries="@array/spinnerItemsTaste"
        android:layout_marginStart="23dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#881e5d"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add snus"
        android:id="@+id/btn_addsnus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btn_addSnusImage"
        android:background="@drawable/cam_button"
        android:layout_above="@+id/etxt_name"
        android:layout_toEndOf="@+id/spin_str"

        android:textColor="#ffffff"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingbar_addsnus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_line"
        android:layout_gravity="left|center_vertical"
        android:hint="Line"
        android:layout_below="@+id/etxt_manu"
        android:layout_alignParentEnd="true"
        android:textColor="#881e5d" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/spin_takepic"
        android:entries="@array/spinnerItemsCamera"
        android:layout_above="@+id/etxt_name"
        android:layout_toStartOf="@+id/btn_addSnusImage"/>

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_type"
        android:entries="@array/spinnerItemsTaste"
        android:layout_above="@+id/spin_taste2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp"
        android:textColor="#881e5d"/>

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_str"
        android:entries="@array/spinnerItemsTaste"
        android:layout_below="@+id/spin_type"
        android:layout_alignEnd="@+id/spin_type"
        android:textColor="#881e5d"/>

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_nico"
        android:entries="@array/spinnerItemsTaste"
        android:layout_alignBottom="@+id/spin_taste3"
        android:layout_alignEnd="@+id/spin_str"
        android:textColor="#881e5d"/>


</RelativeLayout>
