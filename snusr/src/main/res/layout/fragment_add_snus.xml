<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="no.hbv.gruppe1.snusr.snusr.AddSnus">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:id="@+id/addSnus_imgview"
        android:layout_gravity="left|top" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_name"
        android:layout_gravity="left|center_vertical"
        android:hint="Name"
        android:layout_below="@+id/addSnus_imgview"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_manu"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/etxt_name"
        android:layout_alignParentStart="true"
        android:hint="Manufacturing" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_sweet"
        android:entries="@array/spinnerItemsStr"
        android:layout_below="@+id/spin_str"
        android:layout_toLeftOf="@+id/btn_addSnusImage" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_salt"
        android:entries="@array/spinnerItemsStr"
        android:layout_below="@+id/spin_taste"
        android:layout_toLeftOf="@+id/btn_addSnusImage" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_taste"
        android:entries="@array/spinnerItemsStr"
        android:layout_below="@+id/spin_sweet"
        android:layout_toLeftOf="@+id/btn_addSnusImage" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_str"
        android:entries="@array/spinnerItemsTaste"
        android:layout_below="@+id/etxt_line"
        android:layout_toStartOf="@+id/btn_addSnusImage"
        android:layout_marginTop="27dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add snus"
        android:id="@+id/btn_addsnus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_addSnusImage"
        android:layout_above="@+id/etxt_name"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btn_addsnus" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingbar_addsnus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_line"
        android:layout_gravity="left|center_vertical"
        android:hint="Line"
        android:layout_below="@+id/etxt_manu"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sweet"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/spin_str"
        android:layout_toStartOf="@+id/spin_str" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salt"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_above="@+id/spin_taste"
        android:layout_toStartOf="@+id/spin_taste" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strength"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/spin_salt"
        android:layout_toStartOf="@+id/spin_salt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taste"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:layout_above="@+id/spin_salt"
        android:layout_toStartOf="@+id/spin_salt" />

</RelativeLayout>
