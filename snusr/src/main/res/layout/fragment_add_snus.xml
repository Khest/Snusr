<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="no.hbv.gruppe1.snusr.snusr.AddSnus"
    android:id="@+id/">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:id="@+id/addSnus_imgview"
        android:layout_gravity="left|top" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_name"
        android:layout_gravity="left|center_vertical"
        android:hint="Name"
        android:layout_below="@+id/addSnus_imgview"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_manu"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/etxt_name"
        android:layout_alignParentStart="true"
        android:hint="Manufacturing" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_sweet"
        android:layout_below="@+id/etxt_manu"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_salt"
        android:layout_below="@+id/spin_sweet"
        android:layout_alignEnd="@+id/spin_sweet" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_taste"
        android:layout_below="@+id/spin_salt"
        android:layout_alignEnd="@+id/spin_salt" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/spin_str"
        android:layout_below="@+id/spin_taste"
        android:layout_alignEnd="@+id/spin_taste" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add snus"
        android:id="@+id/btn_addsnus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_addSnusImage"
        android:layout_above="@+id/etxt_name"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingbar_addsnus"
        android:layout_above="@+id/btn_addsnus"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp" />

</RelativeLayout>
