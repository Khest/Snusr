<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9E9E9E"
    android:weightSum="1"
    android:id="@+id/snuslistFragment">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/snuswindow">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:background="#5e5e5e"
        android:id="@+id/snuswindowTop">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmarked"
            android:id="@+id/btn_book"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="#005e5e5e"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            android:paddingRight="15dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All snus"
            android:id="@+id/btn_allsnus"
            android:layout_alignTop="@+id/btn_book"
            android:layout_centerHorizontal="true"
            android:background="#005e5e5e"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/snuswindowTop">
        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/snuslist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            tools:context=".MainActivityFragment"
            android:divider="@null"
            android:dividerHeight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">

        </ListView>
    </RelativeLayout>
</RelativeLayout>
</LinearLayout>